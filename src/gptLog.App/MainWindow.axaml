<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:gptLog.App.ViewModels"
        xmlns:model="using:gptLog.App.Model"
        xmlns:converters="using:gptLog.App.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="gptLog.App.MainWindow"
        Title="gptLog"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        x:DataType="vm:MainWindowViewModel">

    <Window.Resources>
        <converters:RoleToBrushConverter x:Key="RoleToBrushConverter"/>
    </Window.Resources>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+U" Command="{Binding MoveMessageUpCommand}" />
        <KeyBinding Gesture="Ctrl+D" Command="{Binding MoveMessageDownCommand}" />
        <KeyBinding Gesture="Delete" Command="{Binding DeleteMessageCommand}" />
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Top Menu Bar -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding ConversationTitle}"
                     Watermark="Conversation Title"
                     VerticalAlignment="Center" />

            <Button Grid.Column="1" Content="Open" Command="{Binding OpenCommand}"
                    Margin="5,0,0,0" IsVisible="{Binding !HasOpenFile}" />

            <Button Grid.Column="2" Content="Close File" Command="{Binding CloseFileCommand}"
                    Margin="5,0,0,0" IsVisible="{Binding HasOpenFile}" />

            <Button Grid.Column="3" Content="Exit" Command="{Binding ExitCommand}"
                    Margin="5,0,0,0" />
        </Grid>

        <!-- Messages List - Moved before clipboard panel -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
            <ListBox ItemsSource="{Binding Messages}"
                     SelectedItem="{Binding SelectedMessage}"
                     SelectedIndex="{Binding SelectedIndex}"
                     Name="MessagesList">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="model:Message">
                        <Border BorderThickness="2" CornerRadius="4" Padding="4" Margin="2"
                                BorderBrush="{Binding Role, Converter={StaticResource RoleToBrushConverter}}">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Column="0" Text="{Binding PreviewText}" VerticalAlignment="Center" />

                                <!-- Buttons with shorter labels -->
                                <Button Grid.Column="1" Content="↑" Margin="2,0" Padding="4,2" />
                                <Button Grid.Column="2" Content="↓" Margin="2,0" Padding="4,2" />
                                <Button Grid.Column="3" Content="+U" Margin="2,0" Padding="4,2" />
                                <Button Grid.Column="4" Content="+A" Margin="2,0" Padding="4,2" />
                                <Button Grid.Column="5" Content="×" Margin="2,0" Padding="4,2" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Clipboard Panel -->
        <Grid Grid.Row="2" RowDefinitions="*,Auto" Margin="5">
            <TextBox Grid.Row="0" Text="{Binding ClipboardText}" IsReadOnly="True"
                     AcceptsReturn="True" TextWrapping="Wrap" Height="100" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0" Spacing="10">
                <Button Content="Add as User" Command="{Binding AddUserMessageCommand}"
                        ToolTip.Tip="Add as User message" Width="100" />
                <Button Content="Add as Assistant" Command="{Binding AddAssistantMessageCommand}"
                        ToolTip.Tip="Add as Assistant message" Width="120" />
                <CheckBox Content="Clear clipboard after paste"
                          IsChecked="{Binding ClearClipboardAfterPaste}" />
                <CheckBox Content="Stay on top" IsChecked="{Binding StayOnTop}" />
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Save" Command="{Binding SaveCommand}" />

            <!-- File path with save status -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                <TextBlock Text="{Binding CurrentFilePath}" VerticalAlignment="Center" />
                <TextBlock Text=" (Not saved to any file)"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           IsVisible="{Binding !HasOpenFile}" />
            </StackPanel>

            <!-- Unsaved changes indicator -->
            <Border Grid.Column="2"
                    Background="#FFF0F0"
                    CornerRadius="3"
                    Padding="5,2"
                    IsVisible="{Binding IsUnsaved}">
                <TextBlock Text="Unsaved Changes"
                           Foreground="#CC3300"
                           FontWeight="Medium"
                           VerticalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</Window>
