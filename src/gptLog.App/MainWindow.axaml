<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:gptLog.App.ViewModels"
        xmlns:model="using:gptLog.App.Model"
        xmlns:converters="using:gptLog.App.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="gptLog.App.MainWindow"
        Title="gptLog"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        x:DataType="vm:MainWindowViewModel"
        FontFamily="{Binding ConfiguredFontFamily}"
        FontSize="{Binding ConfiguredFontSize}">

    <Window.Resources>
        <converters:RoleToBrushConverter x:Key="RoleToBrushConverter"/>
    </Window.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="5">
        <!-- Top Menu Bar - Reorganized -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Open Button (Only visible when no file is open) -->
            <Button Grid.Column="0" Content="Open" Command="{Binding OpenCommand}"
                    Margin="5" IsVisible="{Binding !HasOpenFile}"
                    VerticalAlignment="Center" />

            <!-- Save Button -->
            <Button Grid.Column="1" Content="Save" Command="{Binding SaveCommand}"
                    Margin="5" IsEnabled="{Binding IsUnsaved}"
                    VerticalAlignment="Center" />

            <!-- Unsaved Indicator -->
            <Border Grid.Column="2"
                    Background="#FFF0F0"
                    CornerRadius="3"
                    Padding="5,0"
                    Margin="5"
                    IsVisible="{Binding IsUnsaved}">
                <TextBlock Text="Unsaved Changes"
                           Foreground="#CC3300"
                           FontWeight="Medium"
                           VerticalAlignment="Center" />
            </Border>

            <!-- File path display -->
            <Grid Grid.Column="3" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="{Binding CurrentFilePath}"
                           IsVisible="{Binding HasOpenFile}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />

                <TextBlock Text="(No file open)"
                           Foreground="Gray"
                           IsVisible="{Binding !HasOpenFile}"
                           VerticalAlignment="Center" />
            </Grid>
        </Grid>

        <!-- Conversation Title in Second Row -->
        <TextBox Grid.Row="1"
                 Text="{Binding ConversationTitle}"
                 Watermark="Conversation"
                 FontSize="{Binding TitleFontSize}"
                 FontWeight="Medium"
                 Margin="5"/>

        <!-- Messages List -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="5">
            <ListBox ItemsSource="{Binding Messages}"
                     SelectedItem="{Binding SelectedMessage}"
                     SelectedIndex="{Binding SelectedIndex}"
                     Name="MessagesList">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="0" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" CornerRadius="3" Padding="5" Margin="5"
                                BorderBrush="{Binding Role, Converter={StaticResource RoleToBrushConverter}}">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Column="0" Text="{Binding PreviewText}" VerticalAlignment="Center" />

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                    <!-- Removed explicit padding from buttons since we have default styles -->
                                    <Button Content="Up"
                                            Tag="MoveUp"
                                            ToolTip.Tip="Move message up"
                                            VerticalAlignment="Center" />

                                    <Button Content="Down"
                                            Tag="MoveDown"
                                            ToolTip.Tip="Move message down"
                                            VerticalAlignment="Center" />

                                    <Button Content="+U"
                                            Tag="InsertUser"
                                            ToolTip.Tip="Insert user message before this message"
                                            VerticalAlignment="Center" />

                                    <Button Content="+A"
                                            Tag="InsertAssistant"
                                            ToolTip.Tip="Insert assistant message before this message"
                                            VerticalAlignment="Center" />

                                    <Button Content="Del"
                                            Tag="Delete"
                                            ToolTip.Tip="Delete message"
                                            VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Clipboard Preview TextBox -->
        <TextBox Grid.Row="3"
                 Text="{Binding ClipboardText}"
                 IsReadOnly="True"
                 Height="100"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Watermark="Clipboard contents will appear here"
                 Margin="5"
                 Padding="10"/>

        <!-- Bottom Row with Add Buttons on Left and Exit on Right -->
        <Grid Grid.Row="4" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Add Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Button Content="Add as User" Command="{Binding AddUserMessageCommand}"
                        IsEnabled="{Binding CanAddClipboardText}"
                        ToolTip.Tip="Add as User message"
                        VerticalAlignment="Center" />
                <Button Content="Add as Assistant" Command="{Binding AddAssistantMessageCommand}"
                        IsEnabled="{Binding CanAddClipboardText}"
                        ToolTip.Tip="Add as Assistant message"
                        VerticalAlignment="Center" />
                <CheckBox Content="Clear clipboard after paste"
                          IsChecked="{Binding ClearClipboardAfterPaste}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                <!-- Right Side - Stay on Top checkbox next to Exit Button -->
                <CheckBox Content="Stay on Top"
                          IsChecked="{Binding StayOnTop}"
                          VerticalAlignment="Center" />

                <!-- Exit Button -->
                <Button Content="Exit"
                        Command="{Binding ExitCommand}"
                        VerticalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
