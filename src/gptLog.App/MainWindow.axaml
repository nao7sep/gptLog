<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:gptLog.App.ViewModels"
        xmlns:model="using:gptLog.App.Model"
        xmlns:converters="using:gptLog.App.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="gptLog.App.MainWindow"
        Title="gptLog"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        x:DataType="vm:MainWindowViewModel">

    <Window.Resources>
        <converters:RoleToBrushConverter x:Key="RoleToBrushConverter"/>
    </Window.Resources>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+U" Command="{Binding MoveMessageUpCommand}" />
        <KeyBinding Gesture="Ctrl+D" Command="{Binding MoveMessageDownCommand}" />
        <KeyBinding Gesture="Delete" Command="{Binding DeleteMessageCommand}" />
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Top Menu Bar - Reorganized -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Open/Close Button -->
            <Button Grid.Column="0" Content="Open" Command="{Binding OpenCommand}"
                    Margin="0,0,5,0" IsVisible="{Binding !HasOpenFile}" />

            <Button Grid.Column="0" Content="Close File" Command="{Binding CloseFileCommand}"
                    Margin="0,0,5,0" IsVisible="{Binding HasOpenFile}" />

            <!-- Save Button -->
            <Button Grid.Column="1" Content="Save" Command="{Binding SaveCommand}"
                    Margin="0,0,5,0" />

            <!-- Unsaved Indicator -->
            <Border Grid.Column="2"
                    Background="#FFF0F0"
                    CornerRadius="3"
                    Padding="5,2"
                    Margin="0,0,5,0"
                    IsVisible="{Binding IsUnsaved}">
                <TextBlock Text="Unsaved Changes"
                           Foreground="#CC3300"
                           FontWeight="Medium"
                           VerticalAlignment="Center" />
            </Border>

            <!-- File path display - Fixed visibility conditions -->
            <Grid Grid.Column="3" VerticalAlignment="Center" Margin="5,0">
                <TextBlock Text="{Binding CurrentFilePath}"
                           IsVisible="{Binding HasOpenFile}" />

                <TextBlock Text="(Not saved to any file)"
                           Foreground="Gray"
                           IsVisible="{Binding !HasOpenFile}" />
            </Grid>
        </Grid>

        <!-- Conversation Title in Second Row -->
        <TextBox Grid.Row="1"
                 Text="{Binding ConversationTitle}"
                 Watermark="Conversation Title"
                 FontSize="16"
                 FontWeight="Medium"
                 Margin="5"/>

        <!-- Messages List -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="5">
            <ListBox ItemsSource="{Binding Messages}"
                     SelectedItem="{Binding SelectedMessage}"
                     SelectedIndex="{Binding SelectedIndex}"
                     Name="MessagesList">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="2" CornerRadius="4" Padding="4" Margin="2"
                                BorderBrush="{Binding Role, Converter={StaticResource RoleToBrushConverter}}">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Column="0" Text="{Binding PreviewText}" VerticalAlignment="Center" />

                                <!-- Use Tags to identify buttons instead of commands -->
                                <Button Grid.Column="1" Content="↑" Margin="2,0" Padding="4,2"
                                        Tag="MoveUp"
                                        ToolTip.Tip="Move message up" />

                                <Button Grid.Column="2" Content="↓" Margin="2,0" Padding="4,2"
                                        Tag="MoveDown"
                                        ToolTip.Tip="Move message down" />

                                <Button Grid.Column="3" Content="+U" Margin="2,0" Padding="4,2"
                                        Tag="InsertUser"
                                        ToolTip.Tip="Insert user message before this message" />

                                <Button Grid.Column="4" Content="+A" Margin="2,0" Padding="4,2"
                                        Tag="InsertAssistant"
                                        ToolTip.Tip="Insert assistant message before this message" />

                                <Button Grid.Column="5" Content="×" Margin="2,0" Padding="4,2"
                                        Tag="Delete"
                                        ToolTip.Tip="Delete message" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Bottom Row with Add Buttons on Left and Exit on Right -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Add Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Button Content="Add as User" Command="{Binding AddUserMessageCommand}"
                        IsEnabled="{Binding CanAddClipboardText}"
                        ToolTip.Tip="Add as User message" Width="100" />
                <Button Content="Add as Assistant" Command="{Binding AddAssistantMessageCommand}"
                        IsEnabled="{Binding CanAddClipboardText}"
                        ToolTip.Tip="Add as Assistant message" Width="120" />
                <CheckBox Content="Clear clipboard after paste"
                          IsChecked="{Binding ClearClipboardAfterPaste}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Right Side - Stay on Top checkbox next to Exit Button -->
            <CheckBox Grid.Column="2"
                      Content="Stay on Top"
                      IsChecked="{Binding StayOnTop}"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

            <!-- Exit Button -->
            <Button Grid.Column="3"
                    Content="Exit"
                    Command="{Binding ExitCommand}"
                    VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
