<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:gptLog.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="gptLog.App.DialogWindow"
        x:DataType="vm:DialogWindowViewModel"
        Title="{Binding Title}"
        MaxWidth="600"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        FontFamily="{Binding ConfiguredFontFamily}"
        FontSize="{Binding ConfiguredFontSize}">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message Text -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Message}"
                   TextWrapping="Wrap"
                   MaxWidth="560"
                   Margin="5" />

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    Margin="5">

            <!-- OK Button (visible for OK dialogs) -->
            <Button Content="OK"
                    Command="{Binding OkCommand}"
                    IsVisible="{Binding !IsYesNoDialog}"/>

            <!-- Yes/No Buttons (visible for Yes/No dialogs) -->
            <Button Content="Yes"
                    Command="{Binding YesCommand}"
                    IsVisible="{Binding IsYesNoDialog}"/>

            <Button Content="No"
                    Command="{Binding NoCommand}"
                    IsVisible="{Binding IsYesNoDialog}"/>
        </StackPanel>
    </Grid>
</Window>